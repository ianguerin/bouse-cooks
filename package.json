{
  "name": "bouse-cooks",
  "version": "1.1.0",
  "main": "server.js",
  "license": "MIT",
  "scripts": {
    "start": "node src/back-end/server",
    "heroku-prebuild": "parcel build src/front-end/index.html",
    "lint": "eslint ./src/*",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier-eslint --write \"src/**/*.js\"",
    "dev:back": "NODE_ENV=dev node src/back-end/server",
    "dev:front": "parcel watch src/front-end/index.html",
    "test": "jest",
    "test:watch": "jest --watch",
    "weekly": "node src/back-end/scripts/alert"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@sendgrid/mail": "^6.3.1",
    "axios": "^0.21.1",
    "body-parser": "^1.18.3",
    "cheerio": "^1.0.0-rc.2",
    "express": "^4.16.4",
    "moment": "^2.22.2",
    "mongodb": "^3.1.10",
    "multer": "^1.4.1",
    "newrelic": "^4.12.0",
    "parcel-bundler": "^1.10.3",
    "prop-types": "^15.6.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-router-dom": "^4.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@babel/plugin-transform-modules-commonjs": "^7.2.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.9.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.6",
    "prettier": "^1.15.3",
    "prettier-eslint-cli": "^4.7.1"
  },
  "engines": {
    "node": "11.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test"
    }
  },
  "jest": {
    "setupFiles": [
      "./src/setupTests.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "\\.(jpg|ico|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/__mocks__/fileMock.js",
      "\\.(css|less|sass|scss)$": "<rootDir>/src/__mocks__/styleMock.js"
    },
    "testPathIgnorePatterns": [
      ".c9"
    ],
    "collectCoverageFrom": [
      "**/src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 34.59,
        "branches": 21.42,
        "functions": 32.35,
        "lines": 35.16
      }
    }
  }
}
